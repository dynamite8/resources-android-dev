<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.tiptopgoodstudio.androidresources.ui.HomeFragment">

        <com.tiptopgoodstudio.androidresources.ui.StickyNoteView
            android:id="@+id/customView1"
            custom:stickyString="@string/resourceOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.tiptopgoodstudio.androidresources.ui.StickyNoteView
            android:id="@+id/customView2"
            custom:stickyString="@string/resourceTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.tiptopgoodstudio.androidresources.ui.StickyNoteView
            android:id="@+id/customView3"
            custom:stickyString="@string/resourceThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.tiptopgoodstudio.androidresources.ui.StickyNoteView
            android:id="@+id/customView4"
            custom:stickyString="@string/resourceFour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"/>

</LinearLayout>

</ScrollView>